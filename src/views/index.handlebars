<div class="row mt-5">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header">
        <h3>Pesquisar Clima</h3>
      </div>
      <div class="card-body">
        <form id="weatherForm" action="/weather-details" method="POST">
          <div class="mb-3">
            <label for="cityInput" class="form-label">Digite o nome da cidade:</label>
            <input type="text" class="form-control" id="cityInput" name="city" placeholder="Ex: São Paulo" required>
          </div>
          <button type="submit" class="btn btn-primary" id="submitButton">Pesquisar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('submitButton').addEventListener('click', function(event) {
    const cityInputValue = document.getElementById('cityInput').value.trim();
    if (cityInputValue === '') {
      event.preventDefault();
      Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Insira um parâmetro para busca!'
      });
    }
  });
</script>
